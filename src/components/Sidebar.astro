  <!-- You Section -->
  <div class="mb-6">
    <p class="text-xs font-semibold text-gray-400 px-3 mb-2 uppercase">You</p>
    <nav class="space-y-2">
      <button
        class="w-full flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"></path>
        </svg>
        <span>Your Channel</span>
      </button>
      <button
        class="w-full flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"
          ></path>
        </svg>
        <span>History</span>
      </button>
      <button
        class="w-full flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m0 0l-2-1m2 1v2.5M14 4l-2 1m0 0L10 4m2 1V5.5"
          ></path>
        </svg>
        <span>Watch Later</span>
      </button>
      <button
        class="w-full flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
          ></path>
        </svg>
        <span>Liked Videos</span>
      </button>
    </nav>
  </div>

  <div class="border-t border-gray-800 my-4"></div>

  <!-- Explore Section -->
  <div class="mb-6">
    <p class="text-xs font-semibold text-gray-400 px-3 mb-2 uppercase">
      Explore
    </p>
    <nav class="space-y-2">
      <button
        class="w-full flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M15.25 1H8.75C7.232 1 6 2.232 6 3.75v16.5C6 21.768 7.232 23 8.75 23h6.5c1.518 0 2.75-1.232 2.75-2.75V3.75C18 2.232 16.768 1 15.25 1zm-3.5 21c-.966 0-1.75-.784-1.75-1.75s.784-1.75 1.75-1.75 1.75.784 1.75 1.75-.784 1.75-1.75 1.75zm3.5-4H8V4h7v14z"
