<aside
  id="sidebar"
  class="w-64 bg-gray-950 border-r border-gray-800 p-3 h-screen overflow-y-auto max-md:hidden max-md:fixed max-md:z-40 max-md:left-0 max-md:top-14"
>
  <!-- Home Section -->
  <nav class="space-y-2 mb-6">
    <a
      href="/"
      class="flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
    >
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"></path>
      </svg>
      <span>Home</span>
    </a>
    <button
      class="w-full flex items-center gap-4 px-3 py-2 rounded-lg hover:bg-gray-900 text-white transition-colors"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
