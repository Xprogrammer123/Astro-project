---
import YouTubeLayout from "../layouts/YouTubeLayout.astro";
---

<YouTubeLayout title="Page Not Found - Tube">
  <div class="h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-bold mb-4">404</h1>
      <p class="text-xl text-gray-400 mb-8">Video not found</p>
      <a
        href="/"
        class="px-6 py-3 bg-white text-black font-semibold rounded-full hover:bg-gray-200 transition-colors inline-block"
      >
        Go back to Home
      </a>
    </div>
  </div>
</YouTubeLayout>
